terraform {
  required_version = ">= 0.13"

  backend "s3" {
    bucket = "bob-state"
    key    = "bob-state.tfstate"
    region = "eu-central-1"
  }

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 3.0"
    }
  }
}

provider "aws" {
  region = "eu-central-1"
}

